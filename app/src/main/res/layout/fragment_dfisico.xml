<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Datos_Fisicos.DatosFisicosFragment">


    <TextView
        android:id="@+id/sexo"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="142dp"
        android:text="Sexo:"
        android:textSize="18dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginStart="76dp"
        android:checkedButton="@+id/radio_button_1">

        <RadioButton
            android:id="@+id/radio_button_m"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mujer"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_button_h"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hombre" />
    </RadioGroup>

    <TextView
        android:id="@+id/fnac"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="142dp"
        android:duplicateParentState="false"
        android:text="Fecha de Nacimiento:"
        android:textStyle="bold"
        android:textSize="18dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/peso"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/pesolbl"
        android:layout_alignLeft="@id/pesolbl"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="120dp"
        android:hint="kg"
        app:boxBackgroundMode="outline"
        app:hintTextColor="#000000"
        app:boxBackgroundColor="#F9E0C1"
        app:boxStrokeColor="#E4BD8F">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/altura"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/alturalbl"
        android:layout_alignLeft="@id/alturalbl"
        android:layout_marginStart="90dp"
        android:layout_marginTop="180dp"
        android:hint="cm"
        app:boxBackgroundMode="outline"
        app:hintTextColor="#000000"
        app:boxBackgroundColor="#F9E0C1"
        app:boxStrokeColor="#E4BD8F">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/pesolbl"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="142dp"
        android:duplicateParentState="false"
        android:text="Peso:"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/alturalbl"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="142dp"
        android:duplicateParentState="false"
        android:text="Altura:"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/textimc"
        android:layout_width="289dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="59dp"
        android:duplicateParentState="false"
        android:fontFamily="@font/bellota_light"
        android:text="Conoce tu Indice de Masa Corporal:"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButtonCalendario"
        android:layout_width="46dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="247dp"
        android:layout_marginEnd="137dp"
        android:onClick="abrircalendario"
        android:src="@android:drawable/ic_menu_today" />

    <TextView
        android:id="@+id/textcalendario"
        android:layout_width="119dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="14dp"
        android:textSize="18dp" />


    <Button
        android:id="@+id/buttonDF"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="129dp"
        android:layout_marginBottom="255dp"
        android:backgroundTint="#A55E30"
        android:onClick="AceptarDF"
        android:text="Aceptar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:typeface="normal" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="117dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/imc" />

</RelativeLayout>