    <Button
        android:id="@+id/buttonEnv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="159dp"
        android:layout_marginBottom="104dp"
        android:backgroundTint="#A55E30"
        android:text="Enviar"
        android:textSize="12dp"
        android:textColor="@color/white"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/NameReg"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="120dp"
        android:hint="User Name"
        app:boxBackgroundColor="#F9E0C1"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#E4BD8F"
        app:hintTextColor="#000000">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EmailReg2"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="300dp"
            android:hint="Email"
            app:boxBackgroundColor="#F9E0C1"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#E4BD8F"
            app:hintTextColor="#000000"
            app:helperText="Repite email">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EmailReg1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="210dp"
            android:hint="Email"
            app:boxBackgroundColor="#F9E0C1"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#E4BD8F"
            app:hintTextColor="#000000">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/PassReg1"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="390dp"
        android:hint="Password"
        app:boxBackgroundColor="#F9E0C1"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#E4BD8F"
        app:endIconMode="password_toggle"
        app:endIconTint="#000000"
        app:helperText="Al menos 8 caracteres"
        app:hintTextColor="#555554"
        app:passwordToggleTint="#0E0E0E">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/PassReg2"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="480dp"
        android:hint="Password"
        app:boxBackgroundColor="#F9E0C1"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#E4BD8F"
        app:endIconMode="password_toggle"
        app:endIconTint="#000000"
        app:helperText="Repite contraseÃ±a"
        app:hintTextColor="#555554"
        app:passwordToggleTint="#0E0E0E">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

